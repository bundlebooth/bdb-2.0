<iframe 
  id="bundlebooth-iframe"
  src="https://bundlebooth.github.io/bdb-2.0/frontend/Step123.html" 
  style="width: 100%; border: 0; display: block;" 
  scrolling="no"
  allow="payment *"
  allowfullscreen
  sandbox="allow-scripts allow-forms allow-same-origin allow-popups allow-modals"
  referrerpolicy="strict-origin-when-cross-origin"
></iframe>

<style>
  /* Responsive height adjustments */
  #bundlebooth-iframe {
    /* Default desktop height */
    height: 2300px;
    min-height: 2300px;
    overflow: hidden;
  }

  /* Tablet */
  @media (max-width: 768px) {
    #bundlebooth-iframe {
      height: 2800px;
      min-height: 2800px;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    #bundlebooth-iframe {
      height: 5900px;
      min-height: 5900px;
    }
  }

  /* Loading state (optional) */
  .iframe-loading {
    position: relative;
  }
  .iframe-loading::after {
    content: "Loading booking system...";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.2rem;
    color: #666;
  }
</style>

<script>
  // Optional: Add loading state and auto-height adjustment
  document.addEventListener('DOMContentLoaded', function() {
    const iframe = document.getElementById('bundlebooth-iframe');
    
    // Add loading class initially
    iframe.parentElement.classList.add('iframe-loading');
    
    // Handle when iframe loads
    iframe.onload = function() {
      iframe.parentElement.classList.remove('iframe-loading');
      
      try {
        // Optional: Adjust height based on content
        window.addEventListener('message', function(e) {
          if (e.data && e.data.type === 'iframeHeight') {
            iframe.style.height = e.data.height + 'px';
          }
        });
        
        // Request initial height
        iframe.contentWindow.postMessage({ type: 'getHeight' }, '*');
      } catch(e) {
        console.log('Safe cross-origin error:', e);
      }
    };
  });
</script>
